//- Все примеси в этом файле должны начинаться c имени блока (Text-Field)

mixin Text-Field(text, textPlaceholder, mods)

  //- Принимает:
  //-   text               {string} -  text
  //-   textPlaceholder    {string} - Placeholder text
  //-   mods               {string} - список модификаторов
  //- Вызов:
        +Text-Field('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' Text-Field--' + modsList[i].trim();
      }
    }

    if (text === '') {
      text = 'Text field';
    }

    if (textPlaceholder === '') {
      textPlaceholder = 'Email';
    }

  .Text-Field(class=allMods)&attributes(attributes)
    label.Text-Field__label
      .Text-Field__text #{text}
      input.Text-Field__input(type=Email, placeholder=textPlaceholder)
